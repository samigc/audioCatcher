{
  "manifest_version": 3,
  "name": "Audio Catchr",
  "description": "Catch and analyze audio that passes through your browser",
  "version": "0.1",
  "icons": {
    "16": "images/catcher16.png",
    "32": "images/catcher32.png",
    "48": "images/catcher48.png",
    "128": "images/catcher128.png"
  },
  "action": {
    "default_title": "Audio Catchr",
    "default_popup": "popup.html" 
  },
  "content_scripts": [
    {
      "js": [
        "scripts/catcher.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ]
}